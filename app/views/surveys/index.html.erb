<div class='row'>
<h1>Listing surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td class='h4'><%= survey.name %></td>
        <td class='btn btn-link'><%= link_to 'Show', survey %></td>
        <td class='btn btn-link'><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td class='btn btn-link'><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survey', new_survey_path %>